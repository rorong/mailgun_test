<%= form_for(notification) do |f| %>
  <%= render partial: 'shared/form_errors', locals: { object: f.object} %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </div>

  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text, size: '30x10' %>
  </div>

  <div class="field">
    <%= f.label :campaign_id %>
    <%= f.text_field :campaign_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
